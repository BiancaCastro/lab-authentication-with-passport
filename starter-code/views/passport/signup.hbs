<div class="signup">
    <h1>Sign up</h1>
    <form action="/signup" method="POST" class="form">
        <input type="text" name="username" placeholder="Name">
        <input type="password" name="password" placeholder="Your password">
        <button type="submit">Submit</button>
    </form>
    {{#if message}}
    <p>{{message}}</p>
    {{/if}}
</div>